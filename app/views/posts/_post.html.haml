.post
  .post__head
    .post__head__title
      %span
      = post.title
    .post__head__user
      = link_to "#{post.user.name}", "/users/#{post.user.id}", class: 'post-btn'
    .post__head__date
      = post.created_at.strftime("%Y/%m/%d %H:%M")
  .post__text
    = post.text
  .post__image
    = image_tag post.image.url if post.image.present?
  .post__links
    .post__links__tag #tag
    - if user_signed_in?
      .post__links__edit
        = link_to "Edit", "/posts/#{post.id}/edit", class: "post-btn" if current_user.id == post.user.id
      .post__links__delete
        = link_to "Delete", "/posts/#{post.id}", method: :delete, class: "post-btn" if current_user.id == post.user.id
      .post__links__like
        = render 'likes/like', post: post
  .post__foot
    .post__foot__comment
      = link_to "Comment", "/posts/#{post.id}", class: "post-btn"