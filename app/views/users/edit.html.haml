.wrapper
  =render partial: "shared/header"

  .side
    =render partial: "shared/side", collection: @tags

  .main
    %h2 Edit Profile
    .profile__form
      = form_for(current_user) do |f|
        .field
          .field__label
            = f.label :name
          .field__input
            = f.text_field :name
          .field__label
            = f.label :email
          .field__input
            = f.text_field :email
          .field__label
            = f.label :about
          .field__input
            = f.text_area :about
          .field
            = f.label :image
            %br/
            = f.file_field :image
          .action
            = f.submit "Update", class: 'btn'
